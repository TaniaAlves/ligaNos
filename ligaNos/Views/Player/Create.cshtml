@model ligaNos.Models.PlayersViewModel

@{
    ViewData["Title"] = "AddPlayers";
}

<div id="main-wrapper">
    <div class="page-wrapper" style="background-color:white; margin-left:20%; margin-right:5%; padding-top:5%">
        <h1 style=" font-family:'Times New Roman', Times, serif">Add Club Manager</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddPlayers">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PlayerId" />

                    <div class="form-group">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Number">Number</label>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PositionId" class="control-label"></label>
                        <select asp-for="PositionId" asp-items="Model.Positions" class="form-control"></select>
                        <span asp-validation-for="PositionId" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

