
@model List<ligaNos.Models.GameResultsViewModel>
@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
<div class="site-blocks-cover overlay" style="background-image: url(https://liganos.pt/images/modal-bg-desktop.png); background-color:black;" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 style="text-align:center; ">Results</h1>
            </div>
        </div>
    </div>
</div>


<div id="main-wrapper">
    <div class="page-wrapper" style="background-color:white; margin-left:20%; margin-right:20%; padding-top:5%">
        @*<h1 style=" font-family:'Times New Roman', Times, serif">Games Results</h1>*@

        <table class="table" id="MyTable" style="width:1000px">
            <thead>
                <tr>

                    <th> Home Team </th>
                    <th>   </th>
                    <th> Goals</th>
                    <th> vs </th>
                    <th>   Goals  </th>
                    <th>  </th>
                    <th>  Away Team</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!String.IsNullOrEmpty(item.ImageUrlHome))
                            {
                                <img src="@Url.Content(item.ImageUrlHome)" alt="Image" style="width: 70px; height: 70px ; max-width: 100%;  height: auto" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeTeam.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MGHome)
                        </td>
                        <td>
                            -
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MGAway)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AwayTeam.Name)
                        </td>
                        <td>
                            @if (!String.IsNullOrEmpty(item.ImageUrlAway))
                            {
                                <img src="@Url.Content(item.ImageUrlAway)" alt="Image" style="width: 70px; height: 70px ; max-width: 100%;  height: auto" />
                            }
                        </td>
                        <td id="@item.Id">
                        </td>
                    </tr>
                }
            </tbody>
        </table>



        <div id="deleteDialog" class="modal fade">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
                        <h4 class="modal-title">Delete</h4>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to delete the country?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
                        <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}