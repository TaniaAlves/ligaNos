@model ligaNos.Data.Entities.Club
@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />


<div class="site-blocks-cover overlay" style="background-image: url(https://liganos.pt/images/modal-bg-desktop.png); background-color:black;" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 style="text-align:center; ">Club Details</h1>
            </div>
        </div>
    </div>
</div>


        <div id="main-wrapper">
            <div class="page-wrapper" style="background-color:white; margin-left:20%; margin-right:20%; padding-top:5%">
                <h1 style="text-align:center; font-family:'Times New Roman', Times, serif">  @Html.DisplayFor(model => model.Name)</h1>

                <div style="text-align:center">
                    <img src="@Url.Content(Model.ImageUrl)" alt="Image" style=" width: 100px; height: 150px; max-width: 100%; height: auto" />

                </div>
                <hr />

                <div>


                    <dl class="dl-horizontal" style=" display:grid; grid-gap: 10px; grid-template-columns: 1fr 1fr 1fr; grid-row-gap: 10px; text-align:center">

                        <dt>
                            @Html.DisplayNameFor(model => model.Stadium)
                        </dt>
                        <dt>
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dt>
                            @Html.DisplayNameFor(model => model.NumberPlayers)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Stadium)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dd>
                            @Html.DisplayFor(model => model.NumberPlayers)
                        </dd>
                    </dl>

                </div>
                <hr />
                <div>

                </div>

                @if (Model.Players == null || Model.Players.Count == 0)
                {
                    @*<h5>There´s no players added yet</h5> }*@ }
                else
                {
                    <h4 style="margin-top:5%">Players</h4>
                    <table class="table" id="MyTable">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Players.FirstOrDefault().FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Players.FirstOrDefault().LastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Players.FirstOrDefault().Number)
                                </th>


                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Players.OrderBy(c => c.FirstName))
                            {
                                <tr>
                                    <td>

                                        <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width: 100px; height: 150px ; max-width: 100%;  height: auto" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Number)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Position.Name)
                                        </td>*@

                                    @*<td id="@item.Id">
                                            <a asp-action="EditPlayer" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                            <a asp-action="DetailsPlayer" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                            <a asp-action="DeletePlayer" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>}

            </div>
        </div>


        @section Scripts{
            <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#MyTable').DataTable();
                });
            </script>
        }
