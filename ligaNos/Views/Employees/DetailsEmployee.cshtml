@model ligaNos.Data.Entities.User

@{
    ViewData["Title"] = "DetailsEmployee";
}


<div id="main-wrapper">
    <div class="page-wrapper" style="background-color:white; margin-left:20%; margin-right:5%; padding-top:5%">
        <h1 style=" font-family:'Times New Roman', Times, serif">Details Employee</h1>

        <hr />
        <div>
            <h4>Client</h4>
            <hr />
            <table>
                <tr>
                    <td>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FullName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FullName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.PostalCode)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.TaxNumber)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.TaxNumber)
                            </dd>
                        </dl>
                    </td>
                    <td style="padding-left:20%">
                        <dl>
                            <dd>
                                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width: 300px; height: 450px ; max-width: 100%;  height: auto" />
    

                            </dd>
                        </dl>
                    </td>
                </tr>
            </table>
           
            @*<div class="col-md-4">
                @if (!String.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width: 300px; height: 450px ; max-width: 100%;  height: auto" />
                }
            </div>*@
        </div>
        
        <div>
            <a asp-action="EditEmployee" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            @*<a asp-action="AddClub" asp-route-id="@Model.Id" class="btn btn-info">Add Club</a>*@
            <a asp-action="Index" class="btn btn-danger">Back to List</a>

        </div>



        <div id="deleteDialog" class="modal fade">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
                        <h4 class="modal-title">Delete</h4>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to delete the city?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
                        <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
