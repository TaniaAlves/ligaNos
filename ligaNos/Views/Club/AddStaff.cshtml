@model ligaNos.Models.StaffViewModel

@{
    ViewData["Title"] = "AddStaff";
}

<div id="main-wrapper">
    <div class="page-wrapper" style="background-color:white; margin-left:20%; margin-right:5%; padding-top:5%">
        <h1 style=" font-family:'Times New Roman', Times, serif">Add Staff</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddStaff" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ClubId" />

                    <div class="form-group">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" class="form-control" type="file" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        @*<img src="@Url.Content(Model.ImageUrl)" alt="Image" />*@
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PostalCode">Postal Code</label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaxNumber">Tax Number</label>
                        <input asp-for="TaxNumber" class="form-control" />
                        <span asp-validation-for="TaxNumber" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OccupationId" class="control-label"></label>
                        <select asp-for="OccupationId" asp-items="Model.Occupations" class="form-control"></select>
                        <span asp-validation-for="OccupationId" class="text-danger"></span>
                    </div>




                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Details" class="btn btn-success">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

