@{
    string controller = Convert.ToString(Context.Request.HttpContext.Request.RouteValues["Controller"]);

    if (controller == "Dashboard" || controller == "Club" || controller == "Employees"||controller == "Position" || controller == "ClubManager"
        || controller == "Matches")
    {
        Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    Layout = Layout;
}