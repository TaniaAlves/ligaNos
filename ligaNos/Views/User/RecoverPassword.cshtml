@model ligaNos.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
}

<h1 style=" color: white; font-family: 'Times New Roman', Times, serif; vertical-align: central;
      background-image: url(../images/img/unknown.png); height: 300px; background-repeat: no-repeat; background-size: cover;
      text-align:center; text-anchor:middle; padding-top: 140px">

    Recover Password
</h1>


<div class="row" style="margin-bottom:20%;margin-top:5%" >
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">

                <a asp-action="Login" class="btn btn-primary">Back to login</a>
                <input type="submit" value="Recover password" class="btn btn-success" />
            </div>
        </form>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

